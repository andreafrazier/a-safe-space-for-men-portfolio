    <script>
      // Load the logo image
      const logo = new Image();
      logo.crossOrigin = "anonymous";
      logo.src =
        'data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><rect width="100" height="100" fill="%23059669"/><text x="50" y="55" font-family="Arial" font-size="30" fill="white" text-anchor="middle">ASSFM</text></svg>';

      logo.onload = function () {
        document.getElementById("loading").style.display = "none";
        generateQRWithLogo();
      };

      function generateQRWithLogo() {
        const canvas = document.getElementById("qr-event");
        const ctx = canvas.getContext("2d");
        const url = "https://asafespaceformen.org/events/register-jan19";

        // Generate QR code with high error correction
        QRCode.toCanvas(
          canvas,
          url,
          {
            width: 512,
            margin: 2,
            errorCorrectionLevel: "H",
            color: {
              dark: "#000000",
              light: "#FFFFFF",
            },
          },
          function (error) {
            if (error) {
              console.error(error);
              return;
            }

            // Add logo in center
            const logoSize = 100;
            const logoX = (canvas.width - logoSize) / 2;
            const logoY = (canvas.height - logoSize) / 2;

            // Draw white background for logo
            ctx.fillStyle = "#FFFFFF";
            ctx.beginPath();
            ctx.arc(
              canvas.width / 2,
              canvas.height / 2,
              logoSize / 2 + 10,
              0,
              2 * Math.PI,
            );
            ctx.fill();

            // Draw logo
            ctx.drawImage(logo, logoX, logoY, logoSize, logoSize);
          },
        );
      }

      // Download QR code
      function downloadQR(canvasId, filename) {
        const canvas = document.getElementById(canvasId);
        const url = canvas.toDataURL("image/png");
        const link = document.createElement("a");
        link.download = filename;
        link.href = url;
        link.click();
      }

      // Download printable flyer
      function downloadFlyer() {
        // Create a larger canvas for the flyer
        const flyerCanvas = document.createElement("canvas");
        flyerCanvas.width = 816; // 8.5" at 96 DPI
        flyerCanvas.height = 1056; // 11" at 96 DPI
        const ctx = flyerCanvas.getContext("2d");

        // White background
        ctx.fillStyle = "#FFFFFF";
        ctx.fillRect(0, 0, flyerCanvas.width, flyerCanvas.height);

        // Header gradient
        const gradient = ctx.createLinearGradient(0, 0, 0, 200);
        gradient.addColorStop(0, "#059669");
        gradient.addColorStop(1, "#1e3a8a");
        ctx.fillStyle = gradient;
        ctx.fillRect(0, 0, flyerCanvas.width, 200);

        // Title
        ctx.fillStyle = "#FFFFFF";
        ctx.font = "bold 48px Arial";
        ctx.textAlign = "center";
        ctx.fillText("Men's Meeting", flyerCanvas.width / 2, 80);

        ctx.font = "32px Arial";
        ctx.fillText("A Safe Space For Men", flyerCanvas.width / 2, 130);

        // Event details
        ctx.fillStyle = "#000000";
        ctx.font = "bold 36px Arial";
        ctx.fillText("Monday, January 19, 2026", flyerCanvas.width / 2, 280);

        ctx.font = "28px Arial";
        ctx.fillText("6:00 PM - 8:30 PM", flyerCanvas.width / 2, 330);

        // Location
        ctx.font = "bold 24px Arial";
        ctx.fillText("SafetyZone", flyerCanvas.width / 2, 400);
        ctx.font = "20px Arial";
        ctx.fillText(
          "21040 Greenfield Road, Suite 278",
          flyerCanvas.width / 2,
          430,
        );
        ctx.fillText("Oak Park, MI 48237", flyerCanvas.width / 2, 460);

        // QR Code
        const qrCanvas = document.getElementById("qr-event");
        const qrSize = 350;
        const qrX = (flyerCanvas.width - qrSize) / 2;
        const qrY = 520;
        ctx.drawImage(qrCanvas, qrX, qrY, qrSize, qrSize);

        // Scan to register text
        ctx.fillStyle = "#059669";
        ctx.font = "bold 28px Arial";
        ctx.fillText("Scan to Register", flyerCanvas.width / 2, 910);

        // URL
        ctx.fillStyle = "#666666";
        ctx.font = "16px Arial";
        ctx.fillText(
          "asafespaceformen.org/events/register-jan19",
          flyerCanvas.width / 2,
          950,
        );

        // Footer
        ctx.fillStyle = "#999999";
        ctx.font = "14px Arial";
        ctx.fillText(
          "Free Parking Available ‚Ä¢ All Are Welcome",
          flyerCanvas.width / 2,
          1020,
        );

        // Download
        const url = flyerCanvas.toDataURL("image/png");
        const link = document.createElement("a");
        link.download = "ASSFM-Jan19-Meeting-Flyer.png";
        link.href = url;
        link.click();
      }
    </script>
